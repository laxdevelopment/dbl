<%- include("static/header.ejs"); %>
    <div class="container px-3 mt-5">
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
        <div class="columns mx-auto" style="justify-content: center;">
            <div class="column is-7 mx-auto">
                <div class="mx-auto box bg-dark has-text-centered mt-5 mb-5">
                    <h1 class="has-text-centered has-text-white is-size-4"><i class="fa fa-sign-in-alt mr-2"></i>Sunlight'a Giriş Yap!</h1>
                    <div class="hr mt-5 mb-5"></div>
                    <a id="loginLink" class="button is-info mx-auto mt-5" href="/login?joinServer=true"><i class="fab fa-discord mr-2"></i>Discord ile Giriş yap</a>
                 
                    <div class="field mt-5 mb-5">
                        <input id="joinServer" type="checkbox" name="joinServer" class="switch is-rounded is-success" checked="checked">
                        <label for="joinServer" class="has-text-white">Discord Sunucusuna Katıl.</label>
                      </div>
                </div>
            </div>
        </div>     
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    </div>
    <script>
        $("#joinServer").change(function (e) { 
            if ($("#joinServer").is(":checked")) {
                $("#loginLink").attr("href", "/login?joinServer=true");
            } else {
                $("#loginLink").attr("href", "/login?joinServer=false");
            }    
        });
        $("#joinServer").change(function (e) { 
            if ($("#joinServer").is(":checked")) {
                $("#fastlogin").attr("href", "https://discord.com/oauth2/authorize?response_type=code&redirect_uri=https%3A%2F%2FSunLight%2Fauth%2Fcallback&scope=identify%20guilds.join&client_id=778960224001589309&prompt=none");
            } else {
                $("#fastlogin").attr("href", "https://discord.com/oauth2/authorize?response_type=code&redirect_uri=https%3A%2F%2FSunLight%2Fauth%2Fcallback&scope=identify%20&client_id=778960224001589309&prompt=none");
            }    
        });
    </script>
