<%- include("static/header.ejs"); %>
<div class="px-10 mt-5 pt-5">
    <p class="has-text-white title is-large"><i class="fad fa-plus-square has-text-success"></i> Botunu Ekle</p>
    <p class="content has-text-white" style="margin-top: -20px;">Siteye ve sunucumuza botunu ekletmek istiyorsan bu formu doldur!</p>
    <div class="hr mb-5"></div>

    <article class="message is-danger" id="errors" style="display:none;">
        <div class="message-body">
          <h3><b><i class="fa fa-exclamation-circle" aria-hidden="true"></i> Hataları düzeltmelisin!</b></h3>
          <div id="errorDetails"></div>
        </div>
    </article>
    <article class="message is-success" id="trueMessage" style="display:none;">
        <div class="message-body">
          <h3><b><i class="fa fa-check-circle" aria-hidden="true"></i> Başarılı!</b></h3>
         Botunuz başarıyla sisteme eklendi! Ana sayfaya yönlendiriliyorsunuz...
        </div>
    </article>
    <div class="columns is-multiline">
        <div class="mb-3 column is-4">
            <div>
                <b class="has-text-white"><i class="fad fa-fingerprint"></i> Bot ID <span class="has-text-danger">*</span></b>
                <p class="has-text-white" style="opacity: 0.6;">Bir Bot ID'si girmelisin.</p>
            </div>
            <input autocomplete="off" type="text" id="id" class="mt-3 form-input" placeholder="Bot ID (Örneğin: 112233445566778899)">
        </div>
        <div class="mb-3 column is-4">
            <div>
                <b class="has-text-white"><i class="fad fa-terminal"></i> Prefix <span class="has-text-danger">*</span></b>
                <p class="has-text-white" style="opacity: 0.6;">Botun prefixini girmelisin.</p>
            </div>
            <input autocomplete="off" type="text" id="prefix" class="mt-3 form-input" placeholder="Prefix (Örneğin: !)">
        </div>
        <div class="mb-3 column is-4">
            <div>
                <b class="has-text-white"><i class="fad fa-tags"></i> Etiketler <span class="has-text-danger">*</span></b>
                <p class="has-text-white" style="opacity: 0.6;">Botun Etiketlerini seçmelisin.</p>
            </div>
            <div id="tags" class="form-input mt-3" style="position:relative;">
            <select class="-mb-5 tagsSelect">
                  <option value="Moderasyon">Moderasyon</option>
                <option value="Müzik">Müzik</option>
                <option value="Oyun">Oyun</option>
                <option value="Utility">Utility</option>
                <option value="Ekonomi">Ekonomi</option>
                <option value="NSFW">NSFW</option>
                <option value="Eğlence">Eğlence</option>
                <option value="Meme">Meme</option>
                <option value="Türkçe">Türkçe</option>
                <option value="Davet">Davet Sistemi</option>
                <option value="Otorol">Otorol</option>
                <option value="Minecraft">Minecraft</option>
                <option value="Fortnite">Fortnite</option>
                <option value="Emoji">Emoji</option>
            </select>
                <input autocomplete="off" type="hidden" id="tagss" value=""/>
            </div>
        </div>
        
        <div class="mb-3 column is-4">
            <div>
                <b class="has-text-white"><i class="fad fa-link"></i> Davet Linki</b>
                <p class="has-text-white" style="opacity: 0.6;">Botunun davet linki.</p>
            </div>
            <input autocomplete="off" type="text" id="inviteLink" class="mt-3 form-input" placeholder="Davet Linki">
        </div>

        <div class="mb-3 column is-4">
            <div>
                <b class="has-text-white"><i class="fad fa-user-crown"></i> Diğer Sahipler</b>
                <p class="has-text-white" style="opacity: 0.6;">Bota sahip diğer kullanıcılar.</p>
            </div>
            <input autocomplete="off" type="text" id="owners" class="mt-3 form-input" placeholder="Diğer Sahipler. (Örneğin: 1234556789,123456789)">
        </div>
        
        <div class="mb-3 column is-4">
            <div>
                <b class="has-text-white"><i class="fad fa-globe"></i> Website</b>
                <p class="has-text-white" style="opacity: 0.6;"> Botunun Website URL'si</p>
            </div>
            <input autocomplete="off" type="text" id="website" class="mt-3 form-input" placeholder="Botunun Website URL'si">
        </div>

        <div class="mb-3 column is-4">
            <div>
                <b class="has-text-white"><i class="fab fa-discord"></i> Destek Sunucusu</b>
                <p class="has-text-white" style="opacity: 0.6;">Destek sunucusu linki.</p>
            </div>
            <input autocomplete="off" type="text" id="supportServer" class="mt-3 form-input" placeholder="Destek Sunucusu. (Örneğin: https://discord.gg/abcdefg)">
        </div>

        <div class="column is-8">
            <div>
                <b class="has-text-white"><i class="fa fa-comment"></i> Kısa Açıklama <span class="has-text-danger">*</span></b>
                <p class="has-text-white" style="opacity: 0.6;">Botunuzun kısa açıklaması.</p>
            </div>
            <input autocomplete="off" type="text" id="shortDescription" class="mt-3 form-input" placeholder="Bla bla bla... (Min 30 karakter, Max: 200 karakter)">
        </div>

        <div class="column is-12">
            <div>
                <b class="has-text-white"><i class="fa fa-comment"></i> Uzun Açıklama<span class="has-text-danger">*</span></b>
                <p class="has-text-white" style="opacity: 0.6;">Botunuzun uzun açıklaması. (Markdown Kullanılabilir)</p>
            </div>
            <br>
            <textarea id="detailedDescription" class="mt-3 form-input" rows="8"></textarea>
        </div>

    </div>

    <br>

    <button class="button is-success mr-2 is-medium" type="button" id="submit"><i class="fad fa-paper-plane"></i>&nbsp;Gönder</button>
   
</div>

<script>
    var editor = CodeMirror.fromTextArea($('#detailedDescription')[0], {
        mode: 'markdown',
        htmlMode: true,
        lineNumbers: true,
        theme: 'ayu-mirage'
    });

    editor.setSize(null,"400px")
    
    $("#submit").click(function (e) {
        var data = {id:$("#id").val(), prefix: $("#prefix").val(), tags: $("#tagss").val(), inviteLink: $("#inviteLink").val(), owners: $("#owners").val(), website: $("#website").val(), supportServer: $("#supportServer").val(), shortDescription: $("#shortDescription").val(), detailedDescription: editor.getValue()}
        $.ajax({
            type: "POST",
            url: "/bots/submit",
            data: data,
            dataType: "json",
            success: function (response) {
                console.log(response)
                if (response.isError == true) {
                    var message = "";
                    Object.values(response).forEach(data => {
                        if (data != true) {
                            message += "» " + data + "<br>";  
                        }
                    });  
                    $("#trueMessage").hide();
                    $("html, body").animate({ scrollTop: 0 }, "slow");
                    $("#errors").show();
                    $("#errorDetails").html(message);
                } else {
                    $("#errors").hide();
                    $("#errorDetails").html("");
                    $("#trueMessage").show();
                    $("html, body").animate({ scrollTop: 0 }, "slow");
                    setTimeout(() => {
                        window.location.href = "/bot/" + $("#id").val();
                    }, 2500);
                }
            }
        });        
    });
</script>
<%- include("static/footer.ejs"); %>